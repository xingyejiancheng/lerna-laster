{
  "compilerOptions": {
    "module": "es6",
    "baseUrl": "./",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "paths": {
      "__tests__/*": ["__tests__/*"],
    }
  },
  "exclude": ["node_modules", "**/__tests__/**"],
}